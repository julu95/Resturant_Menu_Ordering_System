<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.user.avishmya.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#000000">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:background="@drawable/logo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avishmya"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:fontFamily="cursive"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:background="@drawable/jj"
            android:layout_marginTop="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Code"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:id="@+id/codee"
            android:layout_gravity="center"
            android:hint="Enter Login Code"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="20dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@drawable/seatbg" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Login"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:background="@drawable/home_page_menu_bg"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.user.avishmya.GalleryFragment"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Our Gallery"
            android:id="@+id/textView47"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="#030303"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp"
            android:fontFamily="serif-monospace" />

        <ViewFlipper
            android:id="@+id/viewflipperd"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:autoStart="true"
            android:flipInterval="700"
            android:layout_gravity="center"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/slidera"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/sliderb" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sliderc"
                android:layout_gravity="center"
                />
        </ViewFlipper>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Our Menu"
            android:id="@+id/textView48"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="#030303"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:fontFamily="serif-monospace" />

        <ViewFlipper
            android:id="@+id/viewflipphgerd"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:autoStart="true"
            android:flipInterval="400"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p1"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/p2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p4"
                android:layout_gravity="center"
                />
        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/viewflippefrd"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:autoStart="true"
            android:flipInterval="900"
            android:layout_gravity="center"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p3"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/p4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p5"
                android:layout_gravity="center"
                />
        </ViewFlipper>


    </LinearLayout>

</RelativeLayout>
